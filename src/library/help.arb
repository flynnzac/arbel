set /?-present
    (
      set /header
	  [
	    string-append "----Name----:\n"
		   object:/name
		   "\n"
		   "----Description----:\n"
		   object:/description .
	  ] .

      set /usage [ string-append object:/name " " . ] .
      set /loc /#1 .
      while ( exist loc object:/reqd-env . )
            (
              set /par object:/reqd-env:loc .
              set /usage
		  [
		    string-append usage
                           "/" par:/name
                           " "
                           par:/type .
		  ] .
              set /loc [ next loc . ] .
            ) .
      string-append header "\n----Usage----:\n" usage .
    ) .


set /init-document
    (
      registry /name name /description description
	       /reqd-env [ registry . ] .
    ) .

set /add-reqd
    (
      set /new [ next [ last doc:/reqd-env "#" . ] . ] .
      in doc:/reqd-env ( set new
			     [
			       registry /name name /type type
					/description description .
			     ] . ) .
    ) .

set /help
    (
      get object ? .
      print [ ?-present /object ans . ] .
    ) .

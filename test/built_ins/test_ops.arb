print "Start built-in operation tests..." .
set /test-files
    [
      list
        "op_arithematic.arb"
        "op_list.arb"
        "op_registry.arb"
        "op_set.arb"
        "op_if.arb"
        "op_get.arb"
        "op_move.arb"
        "op_delete.arb"
        "op_answer.arb"
        "op_exist.arb"
        "op_comparison.arb"
        "op_string_length.arb"
        "op_string_append.arb"
      .
    ] .

set /test /#1 .
set /success True .
while ( and success { exist test test-files . } . )
      (
        source test-files:test .
        set /success ans .
        set /test [ next test . ] .
      ) .

if success { exit . } { exit 1 . } .

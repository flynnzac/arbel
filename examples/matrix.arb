! Computes v^T v for a vector .
set $dotproduct
    (
      join \#1 \#2 multiply .
      collapse \ans add "#" .
    ) .


! product A B computes A^T B .
set $product
    (
      set $i $#1 .
      set $out [ list . ] .
      while ( exist-in i \#2 . )
            (
              set $one [ get i \#2 . ] .
              set $dotone ( dotproduct \#1 one . ) .
              do-to-all dotone \#1 .
              mov $ans $res .
              in \out ( set i res . ) .
              next i .
              mov $ans $i .
            ) .
      answer \out .
    ) .

! Computes A^T .
set $transpose
    (
      set $i $#1 .
      set $out [ list . ] .
      print out .
      while ( exist-in i [ get $#1 \#1 . ] . )
            (
              do-to-all ( get i \#1 . ) \#1 .
              mov $ans $res .
              in \out ( set i res . ) .
              next i .
              mov $ans $i .
            ) .
      answer \out .
    ) .
